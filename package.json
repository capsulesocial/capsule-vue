{
	"name": "capsule-vue",
	"productName": "Blogchain Client",
	"version": "1.0.0",
	"description": "Electron application using Nuxt.js to serve the Capsule Social Application",
	"author": {
		"name": "Capsule Social",
		"email": "jack@capsule.social",
		"url": "https://capsule.social"
	},
	"private": true,
	"main": "main.js",
	"license": "GNU GENERAL PUBLIC LICENSE",
	"sideEffects": [
		"*.css",
		"*.vue"
	],
	"build": {
		"files": [
			"**/*",
			"!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
			"!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
			"!**/node_modules/*.d.ts",
			"!**/node_modules/.bin",
			"!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
			"!.editorconfig",
			"!**/._*",
			"!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
			"!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
			"!**/{appveyor.yml,.travis.yml,circle.yml}",
			"!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
			"!**/.nuxt/**",
			"!**/build/**",
			"!**/mainprocess/**",
			"!**/src/**",
			"!main.mainprocess.js",
			"!main.dev.js",
			"!main.dev.js.map",
			"!webpack.config.js",
			"!.gitignore",
			"!nuxt.config.js",
			"!package-lock.json",
			"!README.md"
		]
	},
	"scripts": {
		"web": "nuxt -m=client",
		"start": "nuxt start",
		"build:web": "nuxt build -m=client",
		"lint": "yarn eslint -c .eslintrc.js --ext .ts,.js,.vue ./src",
		"lint-fix": "yarn eslint -c .eslintrc.js --fix --ext .ts,.js,.vue ./src",
		"postinstall": "husky install"
	},
	"dependencies": {
		"@braintree/sanitize-url": "^6.0.0",
		"@capsulesocial/capsule-config": "^1.2.6",
		"@nuxtjs/dotenv": "^1.4.1",
		"@nuxtjs/robots": "^2.5.0",
		"@stripe/stripe-js": "^1.34.0",
		"@tailwindcss/typography": "^0.4.1",
		"@toruslabs/customauth": "^10.1.0",
		"@toruslabs/openlogin-ed25519": "^2.0.0",
		"axios": "^0.27.2",
		"browser-image-compression": "^2.0.0",
		"dompurify": "^2.3.10",
		"highlight.js": "^11.6.0",
		"ipfs-core": "0.14.3",
		"libsodium-wrappers": "^0.7.10",
		"lodash": "^4.17.21",
		"marked": "^4.0.18",
		"near-api-js": "^0.45.1",
		"nuxt": "^2.15.8",
		"portal-vue": "^2.1.7",
		"quill": "^1.3.7",
		"quilljs-markdown": "^1.2.0",
		"scrypt-js": "^3.0.1",
		"toastify-js": "^1.12.0",
		"turndown": "^7.1.1",
		"turndown-plugin-gfm": "^1.0.2",
		"vuex-persist": "^3.1.3"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.0.3",
		"@commitlint/config-conventional": "^17.0.3",
		"@hcaptcha/types": "^1.0.2",
		"@nuxt/image": "^0.7.1",
		"@nuxt/types": "^2.15.8",
		"@nuxt/typescript-build": "^2.1.0",
		"@nuxtjs/eslint-config-typescript": "^10.0.0",
		"@nuxtjs/tailwindcss": "^4.2.1",
		"@types/dompurify": "^2.3.3",
		"@types/libsodium-wrappers": "^0.7.9",
		"@types/lodash": "^4.14.182",
		"@types/marked": "^4.0.3",
		"@types/quill": "^2.0.9",
		"@types/toastify-js": "^1.11.1",
		"@types/turndown": "^5.0.1",
		"eslint": "^8.21.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier-vue": "^4.2.0",
		"husky": "^8.0.1",
		"prettier": "^2.7.1",
		"ts-loader": "^8.3.0",
		"typescript": "^4.7.4"
	},
	"resolutions": {
		"bn.js": "^5.2.1"
	},
	"browserslist": [
		"last 2 versions",
		"not dead",
		"not IE 11"
	]
}
