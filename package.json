{
	"name": "capsule-vue",
	"productName": "Blogchain Client",
	"version": "1.0.0",
	"description": "Electron application using Nuxt.js to serve the Capsule Social Application",
	"author": {
		"name": "Capsule Social",
		"email": "jack@capsule.social",
		"url": "https://capsule.social"
	},
	"private": true,
	"main": "main.js",
	"license": "GNU GENERAL PUBLIC LICENSE",
	"sideEffects": [
		"*.css",
		"*.vue"
	],
	"build": {
		"files": [
			"**/*",
			"!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
			"!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
			"!**/node_modules/*.d.ts",
			"!**/node_modules/.bin",
			"!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
			"!.editorconfig",
			"!**/._*",
			"!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
			"!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
			"!**/{appveyor.yml,.travis.yml,circle.yml}",
			"!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
			"!**/.nuxt/**",
			"!**/build/**",
			"!**/mainprocess/**",
			"!**/src/**",
			"!main.mainprocess.js",
			"!main.dev.js",
			"!main.dev.js.map",
			"!webpack.config.js",
			"!.gitignore",
			"!nuxt.config.js",
			"!package-lock.json",
			"!README.md"
		]
	},
	"scripts": {
		"web": "nuxt -m=client",
		"start": "nuxt start",
		"build:web": "nuxt build -m=client",
		"lint": "yarn eslint -c .eslintrc.js --ext .ts,.js,.vue ./src",
		"lint-fix": "yarn eslint -c .eslintrc.js --fix --ext .ts,.js,.vue ./src",
		"postinstall": "husky install"
	},
	"dependencies": {
		"@nuxtjs/dotenv": "^1.4.1",
		"@tailwindcss/typography": "^0.4.1",
		"@toruslabs/customauth": "^7.0.3",
		"@toruslabs/openlogin-ed25519": "^1.7.0",
		"axios": "^0.26.1",
		"browser-image-compression": "^1.0.17",
		"dompurify": "^2.3.6",
		"highlight.js": "^11.5.1",
		"intl-tel-input": "^17.0.16",
		"ipfs-core": "0.14.2",
		"lodash": "^4.17.21",
		"marked": "^4.0.14",
		"near-api-js": "^0.44.2",
		"nuxt": "^2.15.8",
		"portal-vue": "^2.1.7",
		"quill": "^1.3.7",
		"quilljs-markdown": "^1.1.10",
		"scrypt-wasm": "^0.1.1",
		"toastify-js": "^1.11.2",
		"turndown": "^7.1.1",
		"turndown-plugin-gfm": "^1.0.2",
		"tweetnacl": "^1.0.3",
		"vuex-persist": "^3.1.3"
	},
	"devDependencies": {
		"@commitlint/cli": "^16.2.3",
		"@commitlint/config-conventional": "^16.2.1",
		"@nuxt/types": "^2.15.8",
		"@nuxt/typescript-build": "^2.1.0",
		"@nuxtjs/eslint-config-typescript": "^9.0.0",
		"@nuxtjs/tailwindcss": "^4.2.1",
		"@types/dompurify": "^2.3.3",
		"@types/intl-tel-input": "^17.0.4",
		"@types/lodash": "^4.14.181",
		"@types/marked": "^4.0.3",
		"@types/quill": "^2.0.9",
		"@types/toastify-js": "^1.11.0",
		"@types/turndown": "^5.0.1",
		"eslint": "^8.13.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier-vue": "^3.1.0",
		"husky": "^7.0.4",
		"prettier": "^2.6.2",
		"ts-loader": "^8.3.0",
		"typescript": "^4.6.3"
	}
}
